{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "C/C++: g++ 调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // 生成的可执行文件路径（当前文件同目录下的.exe）
            "args": [], // 程序运行时的参数（无参数则留空）
            "stopAtEntry": false, // 是否在程序入口（main）处暂停
            "cwd": "${fileDirname}", // 工作目录（当前文件所在目录）
            "environment": [],
            "externalConsole": true, // true：显示独立控制台窗口；false：在 VSCode 内部终端显示
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用漂亮打印（格式化显示复杂数据）",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ 编译活动文件", // 关联编译任务（需与 tasks.json 的 label 一致）
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe" // 替换为你自己的 gdb 路径！
        }
    ]
}
